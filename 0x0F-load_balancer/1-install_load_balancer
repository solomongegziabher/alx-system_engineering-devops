sudo apt-get -y update
apt-get -y install haproxy

# edit config file
server_config=\
"
frontend getsolomon.tech-frontend
        bind *:80
        mode http
        default_backend getsolomon.tech-backend
backend getsolomon.tech-backend
        balance roundrobin
        server 159699-web-01 18.204.5.78:80 check
        server 159699-web-02 34.207.62.255:80 check
"
echo "$server_config" | sudo tee -a /etc/haproxy/haproxy.cfg

# enable haproxy to be started by init script

echo "ENABLED=1" | sudo tee -a /etc/default/haproxy

sudo service haproxy restart
